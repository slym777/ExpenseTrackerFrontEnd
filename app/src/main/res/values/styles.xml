<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="default_text">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="Theme.ExpenseTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="HorizontalLineSeparator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/outline_color</item>
    </style>

    <style name="VerticalLineSeparator">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/anti_color</item>
    </style>

</resources>